
record(waveform, "$(D):T-Mon"){
    field(SCAN, "5 second")
    field(DTYP, "stream")
    field(INP,  "@Regatron.proto getArray(getTemperatures) $(P)")
    field(FTVL, "DOUBLE")
    field(NELM, "3")
    field(PRIO, "LOW")
}

record(ai, "$(D):IGBTT-Mon"){
    field(SCAN, "Passive")
    field(DESC, "IGBT temperature")
    field(EGU,  "C")
    field(PREC, "2")
    field(DTYP, "Soft Channel")

    field(INP,  "$(D):T-Mon.VAL[0] CP MSS")
}

