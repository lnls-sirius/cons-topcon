
record(waveform, "$(D):Sys-Mon"){
    field(SCAN, "")
    field(DTYP, "stream")
    field(INP,  "@Regatron.proto getArray(getSysReadings) $(PORT) $(A)")
    field(FTVL, "DOUBLE")
    field(NELM, "5")
    field(PRIO, "LOW")
}

record(longin, "$(D):Sys-OutVolt-Mon"){
    field(INP,  "$(D):Sys-Mon[0] CP MSS")
    field(DESC, "System out voltage")
}

record(longin, "$(D):Sys-OutCurrent-Mon"){
    field(INP,  "$(D):Sys-Mon[1] CP MSS")
    field(DESC, "System out current")
}

record(longin, "$(D):Sys-OutPwr-Mon"){
    field(INP,  "$(D):Sys-Mon[2] CP MSS")
    field(DESC, "System out power")
}

record(longin, "$(D):Sys-ResPreset"){
    field(INP,  "$(D):Sys-Mon[3] CP MSS")
    field(DESC, "System resistence preset")
}

record(mbbi, "$(D):Sys-State-Mon") {
    field(PINI, "NO")
    field(SCAN, "Passive")
    field(PHAS, "0")
    field(DESC, "System state")

    field(ZRST, "")
    field(ONST, "")
    field(TWST, "POWERUP")
    field(THST, "")
    field(FRST, "READY")
    field(FVST, "")
    field(SXST, "")
    field(SVST, "")
    field(EIST, "RUN")
    field(NIST, "")
    field(TEST, "WARN")
    field(ELST, "")
    field(TVST, "ERROR")
    field(TTST, "")
    field(FTST, "STOP")
    field(FFST, "")

    field(ZRSV, "")
    field(ONSV, "")
    field(TWSV, "")
    field(THSV, "")
    field(FRSV, "")
    field(FVSV, "")
    field(SXSV, "")
    field(SVSV, "")
    field(EISV, "")
    field(NISV, "")
    field(TESV, "")
    field(ELSV, "")
    field(TVSV, "")
    field(TTSV, "")
    field(FTSV, "")
    field(FFSV, "")

    field(INP,  "$(D):Sys-Mon[4] CP MSS")
