
record(waveform, "$(D):Sys-Mon"){
    field(SCAN, "5 second")
    field(DTYP, "stream")
    field(INP,  "@Regatron.proto getArray(getSysReadings) $(P)")
    field(FTVL, "DOUBLE")
    field(NELM, "5")
    field(PRIO, "LOW")
}

record(ai, "$(D):Sys-OutVolt-Mon"){
    field(SCAN, "Passive")
    field(DESC, "System out voltage")
    field(EGU,  "V")
    field(PREC, "2")
    field(DTYP, "Soft Channel")

    field(INP,  "$(D):Sys-Mon.VAL[0] CP MSS")
}

