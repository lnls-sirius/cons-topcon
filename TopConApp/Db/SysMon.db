
record(waveform, "$(D):Sys-Mon"){
    field(SCAN, "5 second")
    field(DTYP, "stream")
    field(INP,  "@Regatron.proto getArray(getSysReadings) $(PORT) $(A)")
    field(FTVL, "DOUBLE")
    field(NELM, "5")
    field(PRIO, "LOW")
}

record(ai, "$(D):Sys-OutVolt-Mon"){
    field(PINI, "NO")
    field(SCAN, "Passive")
    field(DESC, "System out voltage")
    field(EGU,  "V")
    field(PREC, "2")
    field(PHAS, "0")
    field(LINR, "NO CONVERSION")
    field(EOFF, "0")
    field(ESLO, "1")

    field(INP,  "$(D):Sys-Mon[0] CP MSS")
}

