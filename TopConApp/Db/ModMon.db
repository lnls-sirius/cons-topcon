
record(waveform, "$(D):Mod-Mon"){
    field(SCAN, "5 second")
    field(DTYP, "stream")
    field(INP,  "@Regatron.proto getArray(getModReadings) $(P)")
    field(FTVL, "DOUBLE")
    field(NELM, "5")
    field(PRIO, "LOW")
}

record(ai, "$(D):Mod-OutVolt-Mon"){
    field(SCAN, "Passive")
    field(DESC, "Module out voltage")
    field(EGU,  "V")
    field(PREC, "2")
    field(DTYP, "Soft Channel")

    field(INP,  "$(D):Mod-Mon.VAL[0] CP MSS")
}

